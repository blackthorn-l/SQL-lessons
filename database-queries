/* creating a table */
create table book(
  book_id INT PRIMARY KEY AUTO_INCREMENT, 
  title VARCHAR(50), 
  author VARCHAR(30), 
  price DECIMAL(8, 2), 
  amount INT
)

/* adding values to the table */
insert into book (title, author, price, amount) 
values 
  (
    "Мастер и Маргарита", 
    "Булгаков М.А.", 670.99, 
    3
  )
  
